Start Page:
	Search input:
		css:input.input__control input__input mini-suggest__input
		xpath://input[@class='input__control input__input mini-suggest__input']
	Find Button:
		css:button.button mini-suggest__button button_theme_search button_size_search i-bem button_js_inited
		xpath://button[@class='button mini-suggest__button button_theme_search button_size_search i-bem button_js_inited']

Email Page:
	Write email button:
		css:i.b-toolbar__but__i[value='Compose']
		xpath://i[@class='b-toolbar__but__i' and text()='Compose']
	Logout link:
		css:a.b-header__link b-header__link_exit
		xpath://a[@class='b-header__link b-header__link_exit']
	Settings link:
		css:a[href='/lite/setup']
		xpath://a[@href='/lite/setup']
	Inbox, Sent, Trash, Spam, Draft:                
		css:div[aria-label='Папки']                                    
		xpath://div[@aria-label='Папки']
	Inbox, Deleted, Spam, Draft:
		css:span[role='presentation'][value!='Sent']
		xpath://span[@role='presentation' and text()!='Sent']

